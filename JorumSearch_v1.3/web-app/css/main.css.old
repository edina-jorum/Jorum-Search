	width:auto;
	margin-left: 255px;
	display:block;
/*	padding-right:30px;*/
}

#facets {
	margin-left: 1.5em;
	margin-right:1.5em;
	width:225px; 
	float: left; 
	display:block;"
}

#facets #q{
	width: 80%;
	margin:1em auto 0.5em 0;
	font-size: 1.5em;
	padding-left:0.25em;
}

#facets #search-button{
	color:#008fab;
	font-size: 1.25em;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
