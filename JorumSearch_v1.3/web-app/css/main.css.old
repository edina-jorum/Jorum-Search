/* LIST */

.list table {
    border-collapse: collapse;
}
.list th, .list td {
    border-left: 1px solid #ddd;
}
.list th:hover, .list tr:hover {
    background: #b2d1ff;
}

/* PAGINATION */

.step, .currentStep, .prevLink, .nextLink {
    background: #fff url(../images/skin/shadow.jpg) bottom repeat-x;
    border: 1px solid #ccc;
    /*border-top: 0;*/
    color: #666;
    font-size: 1em;
    overflow: hidden;
    padding: 10px 10px;
}
.step a, .currentStep a, .prevLink a, .nextLink a  {
    background: #fff;
    border: 1px solid #ccc;
    border-color: #ccc #aaa #aaa #ccc;
    color: #666;
    margin: 0 3px;
    padding: 2px 6px;
}
.step span, .currentStep span, .prevLink span, .nextLink span {
    padding: 2px 3px;
}

