/* ACTION BUTTONS */

.buttons {
    background: #fff url(../images/skin/shadow.jpg) bottom repeat-x;
    border: 1px solid #ccc;
    color: #666;
    font-size: 10px;
    margin-top: 5px;
    overflow: hidden;
    padding: 0;
}

.buttons input {
    background: #fff;
    border: 0;
    color: #333;
    cursor: pointer;
    font-size: 10px;
    font-weight: bold;
    margin-left: 3px;
    overflow: visible;
    padding: 2px 6px;
}
.buttons input.delete {
    background: transparent url(../images/skin/database_delete.png) 5px 50% no-repeat;
    padding-left: 28px;
}
.buttons input.edit {
    background: transparent url(../images/skin/database_edit.png) 5px 50% no-repeat;
    padding-left: 28px;
}
.buttons input.save {
    background: transparent url(../images/skin/database_save.png) 5px 50% no-repeat;
    padding-left: 28px;
}

/* JORUM STYLING */
*  { margin:0; padding:0; line-height: 1.3em; font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; }
h3 { padding: 0.5em;}
h3 a { font-family: "Egyptienne F LT Std", "Egyptienne F Std", "Egyptienne F", Cambria, Georgia, serif }
p  { padding: 0.5em; }
a { 
/*	color:#008fab;*/
	color:#00677b;
}
a:hover { 
	color:#006f84;
}

a img {
	border:0;
}
ul { padding: 0.5em; font-weight:bold; }
li { font-weight: normal; display: inline;}

/* For the yui autocomplete selector*/
div.yui-ac-bd ul li{
	display: block;
}	

ul.authors li {
	background-image: url(../images/icons/user_gray.png);
	background-repeat: no-repeat;
	padding-left: 18px;
	margin-right: 0.5em;
}
ul.keywords li a { 
	background: lightblue;
	background-image: url(../images/icons/tag_orange_wide.png);
	background-repeat: no-repeat;
	-webkit-border-radius: 0.5em; 
	-moz-border-radius: 0.5em; 
	border-radius: 0.5em;
	padding: 0 0.75em;
	padding-left: 25px;
	font-size: 0.9em;
	line-height: 1.5em;
	text-decoration: none;
}
ul.keywords li a:hover{
	color:lightblue;
	background: DodgerBlue;
	background-image: url(../images/icons/tag_orange_wide.png);
	background-repeat: no-repeat;
	text-decoration: underline;
}
a.rights-text { display: none;}
.rights { padding: 0.5em 0.5em 0 0.5em; float: right;}
.record {margin:0 0.5em;padding:1em 0;border-bottom: 1px dashed silver;}
.even { background: #eeeeee;}

